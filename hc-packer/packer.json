{
    "variables": {
        "packer_profile": "packer-ec2-s3",
        "applicaiton_name": "staragile",
        "application_version": "1.0.0",
        "region": "us-east-1",
        "instance_type": "t2.micro",
        "source_ami": "ami-05fa00d4c63e32376",
        "ami_aws_account_id": "266934144328"
    },
    "builders": [
        {
            "name": "{{user `applicaiton_name`}}",
            "type": "amazon-ebs",
            "ssh_username": "ubuntu",
            "profile": "default",
            "force_deregister": "true",
            "force_delete_snapshot": "true",
            "associate_public_ip_address": "true", 
            "region": "{{user `region`}}",
            "source_ami": "{{user `source_ami`}}",
            "instance_type": "{{user `instance_type`}}",
            "iam_instance_profile": "{{user `packer_profile`}}",
            "ami_name": "{{user `applicaiton_name`}}-{{user `application_version`}}",
            "tags": {
                "Name": "{{user `applicaiton_name`}}",
                "CreatedBy": "Packer"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt-get update",
                "sudo apt-get install software-properties-common -y"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo add-apt-repository --yes --update ppa:ansible/ansible",
                "sudo apt-get install ansible -y"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo apt-get install git -y"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo apt-get install curl -y"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo apt-get install wget -y"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo apt-get update",
                "sudo apt-get install zip -y"
            ]

        },
        {
            "type": "shell",
            "execute_command": "sudo -u root /bin/bash -c '{{.Path}}'",
            "scripts": [
                "install.sh"
            ]

        },
        {
            "type": "ansible-local",
            "playbook_file": "./tomcat-install.yml",
            "extra_arguments": [
                "-vvvv"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo aws s3 cp s3://kesavkummari-s3/staragileops.zip /opt/tomcat/webapps/",
                "sudo unzip /opt/tomcat/webapps/target/staragileops.zip"
            ]
        }
    ]

}